<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dkurdamosov.abap_test.Main"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_count_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/question"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/question_num" />

            <TextView
                android:id="@+id/question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/count"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@drawable/separator"
            android:layout_height="3dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Как называется система ABAP555"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="15sp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/back"
        />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/back"
        android:layout_margin="2dp"
        android:gravity="fill_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="13sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:text="B: ABAP"
        android:background="@drawable/back"
        android:layout_margin="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="fill_vertical"
        android:textSize="13sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:text="C: ABAP"
        android:background="@drawable/back"
        android:layout_margin="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="fill_vertical"
        android:textSize="13sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/answer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:text="D: ABAP"
        android:background="@drawable/back"
        android:textSize="13sp"
        android:layout_margin="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="fill_vertical"
        android:textColor="@android:color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>
</LinearLayout>
